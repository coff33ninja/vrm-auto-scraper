# VRoid Hub OAuth 2.0 Credentials
# Register your app at: https://hub.vroid.com/oauth/applications
# Documentation: https://developer.vroid.com/en/api/quick-start.html
VROID_CLIENT_ID=your_application_id
VROID_CLIENT_SECRET=your_client_secret

# VRoid Hub tokens (obtained via OAuth flow - run `python src/cli.py vroid-auth`)
VROID_ACCESS_TOKEN=
VROID_REFRESH_TOKEN=

# DeviantArt OAuth 2.0 Credentials
# Register your app at: https://www.deviantart.com/developers/
DEVIANTART_CLIENT_ID=your_client_id
DEVIANTART_CLIENT_SECRET=your_client_secret

# DeviantArt tokens (obtained via OAuth flow - run `python src/cli.py deviantart-auth`)
DEVIANTART_ACCESS_TOKEN=
DEVIANTART_REFRESH_TOKEN=

# Sketchfab API Token (from sketchfab.com/settings/password)
SKETCHFAB_API_TOKEN=your_api_token

# GitHub Personal Access Token (optional, for higher rate limits)
GITHUB_TOKEN=your_github_token

# Crawler settings
RATE_LIMIT_DELAY=1.0
DATA_DIR=./data
